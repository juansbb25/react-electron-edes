{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/renderer/components/*"]
    },
    "target": "es2020",
    "module": "commonjs",
    "lib": ["dom", "esnext"],
    "allowJs": true,
    "jsx": "react",
    "sourceMap": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true
  }
}
