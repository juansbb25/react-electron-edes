{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/renderer/components/*"],
      "@hocs/*": ["src/renderer/hocs/*"],
      "@context/*": ["src/renderer/context/*"],
      "@models/*": ["src/models/*"],
      "@database/*": ["src/database/*"],
      "@fonts/*": ["static/fonts/*"]
    },
    "target": "es2020",
    "module": "commonjs",
    "lib": ["dom", "esnext"],
    "allowJs": true,
    "jsx": "react",
    "sourceMap": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true
  }
}
